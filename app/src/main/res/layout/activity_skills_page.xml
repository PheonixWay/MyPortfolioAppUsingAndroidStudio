<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".skills_page"
    android:background="@drawable/all_activity_background_image">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:background="@drawable/background_style_for_skill_page"
            >

            <TextView
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danish ansari"
                android:textColor="@color/black"
                android:textSize="11dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:fontFamily="@font/product_sans_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SKILLS"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#545454"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="knowledge comes with learning skills comes with experience"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="615dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_style_for_skill_page"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="330dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/java_icon" />

            <ImageView
                android:layout_marginTop="-28dp"
                android:layout_width="330dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:src="@drawable/pthon_icon" />

            <ImageView
                android:layout_marginTop="-28dp"
                android:layout_width="330dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:src="@drawable/c_programing_icon" />
            <ImageView
                android:layout_marginTop="-29dp"
                android:layout_width="330dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:src="@drawable/android_icon" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>