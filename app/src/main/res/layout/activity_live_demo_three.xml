<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".live_demo_three"
    android:orientation="vertical"
    android:background="@drawable/all_activity_background_image">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEMO HOMEPAGE"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="2"

                >

                <ImageButton
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_style_for_skill_page"
                    android:src="@drawable/about_me_logog" />

                <ImageButton
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_style_for_skill_page"
                    android:src="@drawable/education_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="2"

                >

                <ImageButton
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_style_for_skill_page"
                    android:src="@drawable/skills_icon" />


                <ImageButton
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_style_for_skill_page"
                    android:src="@drawable/experience_logo_new" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageButton
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_style_for_skill_page"
                    android:src="@drawable/contact_icon_android" />


                <ImageButton
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_style_for_skill_page"
                    android:src="@drawable/feedback_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageButton
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_style_for_skill_page"
                    android:src="@drawable/admin_icon"
                    tools:ignore="InefficientWeight" />


                <ImageButton
                    android:layout_marginTop="5dp"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_style_for_skill_page"
                    android:src="@drawable/log_out_icon" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>