<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".education_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:background="@drawable/background_style_for_skill_page"
            >

            <TextView
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danish ansari"
                android:textColor="@color/black"
                android:textSize="11dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:fontFamily="@font/product_sans_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUALIFICATION"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#545454"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Education is the most powerful weapon which you can use to change the world"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_margin="10dp"
            android:background="@drawable/background_style_for_skill_page"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/wani_public_school_qualification"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amaranth"
                android:text="Wani Public School"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#545454"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/aladin"
                android:text="[ 2010 - 2019 ]"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_sc"
                android:text="Wani"
                android:textStyle="bold"
                android:textSize="20dp"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/location_resize_twentyfive"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_sc"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/wani_public_school_description"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/view_result_ssc_id"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/circle_shape"
                android:backgroundTint="#545454"
                android:fontFamily="@font/adamina"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="View result"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginBottom="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_margin="10dp"
            android:background="@drawable/background_style_for_skill_page"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:src="@drawable/spm_college_icon"
                android:layout_gravity="center"
                />

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amaranth"
                android:text="S.P.M. High School and jr College "
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#545454"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/aladin"
                android:text="[ 2019 - 2021 ]"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_sc"
                android:text="Wani"
                android:textStyle="bold"
                android:textSize="20dp"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/location_resize_twentyfive"/>

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_sc"
                android:gravity="center"
                android:text="@string/spm_college_description"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/view_result_hsc_id"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/circle_shape"
                android:backgroundTint="#545454"
                android:fontFamily="@font/adamina"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="View result"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginBottom="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_margin="10dp"
            android:background="@drawable/background_style_for_skill_page"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:src="@drawable/shusganga_polytechnic_icon"
                android:layout_gravity="center"
                />

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amaranth"
                android:text="Sushganga Polytechnic  "
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#545454"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/aladin"
                android:text="[ 2021 - 2023 ]"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_sc"
                android:text="Wani"
                android:textStyle="bold"
                android:textSize="20dp"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/location_resize_twentyfive"/>

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_sc"
                android:gravity="center"
                android:text="@string/shusaganga_polytechnic_description"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"/>


        </LinearLayout>






    </LinearLayout>

</ScrollView>