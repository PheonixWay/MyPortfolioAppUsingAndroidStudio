<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_with_number"
    android:orientation="vertical"
    android:background="@drawable/all_activity_background_image">
    <ImageView
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/transparent_logo"
        android:contentDescription="Logo" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/background_style_for_skill_page"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_marginTop="25sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome To Account"
            android:textColor="@color/black"
            android:fontFamily="@font/productsansregular"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We will send OTP to this number to verify"
            android:textSize="18dp"
            android:fontFamily="@font/productsansregular"/>


        <EditText
            android:id="@+id/phone_number_id"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/all_activity_design_background"
            android:gravity="center"
            android:hint="Enter your Number"
            android:inputType="number"
            android:minHeight="48dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/submit_id"
            android:layout_marginTop="40sp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_shape"
            android:textColor="@color/white"
            android:text="submit"/>


        <TextView
            android:id="@+id/error_show_id"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="30dp"
            android:textColor="#FF0202"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/complete_show_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="#00FF0A"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>